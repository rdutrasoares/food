<p id='<%= "comentario_#{comentario.id}" %>'>
	<%= comentario.conteudo %>
	<%= comentario.usuario.email rescue nil %>

	<% if current_usuario = comentario.usuario.id rescue nil %>
	<%= link_to '(remover)', comentario, method: 'delete', remote: true, id: "remove_comentario_#{comentario.id}" %>
	<% end %>
</p>

<% content_for :js do %> 
  $('#remove_comentario_<%= comentario.id %>')
   .bind('ajax:success', function(){ 
    $('#comentario_<%= comentario.id %>').fadeOut();
   }); 
<% end %>